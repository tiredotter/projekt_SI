{% extends "./base.html.twig" %}

{% block title %}
  Write!
{% endblock %}

{% block body %}

  <h2>See all in "{{ category.title }}"</h2>

  {% if pagination is defined and pagination.items|length %}

    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'note.title') }}</th>
          <th>{{ 'label.actions'|trans }}</th>
        </tr>
      </thead>
      <tbody>

        {% for note in pagination.items %}
    
          <tr>
            <td>{{ note.title }}</td>
            <td>
              <a href="{{ url('note_show', {id: note.id}) }}" title="{{ 'action.show'|trans }}">
                  {{ 'action.show'|trans }}
              </a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>
    
    {% else %}
      <p>
          {% include 'default/_single_alert_message.html.twig' with {
            type: 'warning',
            message: 'message.empty_list'|trans
        } %}
      </p>
    {% endif %}
    <p>
      <a href="{{ url('category_index') }}" title="{{ 'action.back_to_list'|trans }}">
          {{ 'action.back_to_list'|trans }}
      </a>
    </p>
{% endblock %}